/*
Link      :  https://codeforces.com/problemset/problem/978/B


Approach  :  If x is found then cnt++ else cnt=0. then count the ans if cnt is greater than or equal to three.


 
*/
#include<bits/stdc++.h>
using namespace std;


int main(){
   int t,n,m,cnt=0,ans=0;
   cin>>n;
   string s;
   cin>>s;
   for(int i=0;i<s.size();i++){
   	  if(s[i]=='x'){
   	     cnt++;
		 if(cnt==3){
		 	ans++;
		 	cnt--;
		 }	
	  }else 
	    cnt=0;
	  
   }
   cout<<ans<<endl;
   
	  


}
